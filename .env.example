# API Keys (Required - DO NOT COMMIT REAL KEYS!)
PINECONE_API_KEY="your-pinecone-api-key-here"
HF_TOKEN="your-huggingface-token-here"
GROQ_API_KEY="your-groq-api-key-here"

# Pinecone Configuration
PINECONE_INDEX_NAME=medicbot
PINECONE_DIMENSION=384

# HuggingFace Model Configuration
HF_MODEL_ID=mistralai/Mistral-7B-Instruct-v0.3
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# LLM Settings
LLM_TEMPERATURE=0.5
LLM_MAX_LENGTH=512

# Document Processing
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
DEBUG=false

# CORS Configuration (comma-separated origins)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Security (OPTIONAL - For future authentication implementation)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# SECRET_KEY=your-secret-key-here-if-using-auth
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# Upload Directory
UPLOAD_DIR=uploads

# Optional: PostgreSQL (uncomment if using)
# DATABASE_URL=postgresql://user:password@localhost/medical_chatbot

# Optional: Redis (uncomment if using)
# REDIS_URL=redis://localhost:6379/0